{
	"$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["*.svelte"]
	},
	"linter": {
		"enabled": true,
		"ignore": ["scrypt.ts", "uuid.ts"]
	},
	"formatter": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"lineWidth": 100
		}
	}
}
