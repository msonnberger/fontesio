{
	"name": "@fontesio/web",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev --port 3000",
		"build": "vite build",
		"preview": "vite preview --port 3000",
		"test": "vitest run",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --plugin prettier-plugin-svelte --check . && eslint .",
		"fix": "prettier --plugin prettier-plugin-svelte --write . && eslint . --fix"
	},
	"devDependencies": {
		"@fontesio/tsconfig": "workspace:*",
		"@iconify/json": "2.2.167",
		"@sveltejs/adapter-vercel": "4.0.4",
		"@sveltejs/kit": "2.3.0",
		"@sveltejs/vite-plugin-svelte": "3.0.1",
		"svelte": "4.2.8",
		"svelte-check": "3.6.2",
		"tslib": "2.6.2",
		"typescript": "5.3.3",
		"unplugin-icons": "0.18.2",
		"vite": "5.0.11",
		"vitest": "1.1.3"
	},
	"type": "module",
	"dependencies": {
		"@fontesio/citations": "workspace:*",
		"@fontesio/config": "workspace:*",
		"@fontesio/drizzle": "workspace:*",
