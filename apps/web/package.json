		"@sveltejs/vite-plugin-svelte": "3.1.1",
		"svelte": "4.2.18",
		"svelte-check": "3.8.4",
		"tslib": "2.6.3",
		"typescript": "5.5.4",
		"unplugin-icons": "0.19.0",
		"vite": "5.1.3",
		"vitest": "2.0.4"
	},
	"type": "module",
	"dependencies": {
		"@fontesio/citations": "workspace:*",
