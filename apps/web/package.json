		"sveltekit-superforms": "2.16.1",
		"tailwind-merge": "2.4.0",
		"tailwind-variants": "^0.2.0",
		"tailwindcss": "3.4.7",
		"tailwindcss-animate": "1.0.7",
		"zod": "3.23.8"
	}
