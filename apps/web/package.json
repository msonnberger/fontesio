		"autoprefixer": "10.4.16",
		"bits-ui": "0.14.0",
		"formsnap": "0.4.2",
		"postcss": "8.4.33",
		"sveltekit-superforms": "1.13.2",
		"tailwind-merge": "2.2.0",
		"tailwind-variants": "^0.1.18",
		"tailwindcss": "3.4.1",
		"tailwindcss-animate": "1.0.7",
		"zod": "3.22.4"
	}
}
